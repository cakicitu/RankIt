<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintBooks"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".BooksMenu">

    <Button
        android:id="@+id/buttonBooksRead"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="read"
        app:backgroundTint="#FFFFFF"
        app:layout_constraintEnd_toEndOf="@+id/buttonRankIt"
        app:layout_constraintStart_toStartOf="@+id/buttonRankIt"
        app:layout_constraintTop_toBottomOf="@+id/buttonRankIt"
        app:strokeColor="#4885ed"
        app:strokeWidth="1dp" />

    <Button
        android:id="@+id/buttonWishlist"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Wishlist"
        app:backgroundTint="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/buttonBooksRead"
        app:layout_constraintStart_toStartOf="@+id/buttonBooksRead"
        app:layout_constraintTop_toBottomOf="@+id/buttonBooksRead"
        app:strokeColor="@color/my_blue"
        app:strokeWidth="1dp" />

    <Button
        android:id="@+id/buttonRecommendation"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Rcommendation"
        app:backgroundTint="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/buttonWishlist"
        app:layout_constraintStart_toStartOf="@+id/buttonWishlist"
        app:layout_constraintTop_toBottomOf="@+id/buttonWishlist"
        app:strokeColor="@color/my_blue"
        app:strokeWidth="1dp" />

    <Button
        android:id="@+id/buttonRankIt"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:text="Rank it !"
        app:backgroundTint="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:strokeColor="@color/my_blue"
        app:strokeWidth="1dp" />
</androidx.constraintlayout.widget.ConstraintLayout>