<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.rankit">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.RankIt">
        <activity
            android:name=".NavigationMenu"
            android:label="@string/title_activity_navigation_menu"></activity>
        <activity android:name=".BooksMenu" />
        <activity android:name=".MangaMenu" />
        <activity android:name=".GamesMenu" />
        <activity android:name=".AnimeMenu" />
        <activity android:name=".TVShowsMenu" />
        <activity
            android:name=".MoviesMenu"
            android:label="@string/title_activity_movies_menu"
            android:theme="@style/Theme.RankIt.NoActionBar" />
        <activity android:name=".MainMenu" />
        <activity android:name=".Registration" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>